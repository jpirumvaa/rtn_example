<div class="w3-container w3-padding-32">
  <div class="w3-modal-content" style="max-width:600px">
    <div class="w3-center">
      <img src="https://rtn.rw/wp-content/uploads/2019/07/rtn_simple_small.png">
      <h2>Welcome to RTN</h2>
    </div>
  <div class="alert" id="loginAlert" style=" padding: 20px;
  background-color: #f44336;
  color: white;">
  <span class="closebtn" onclick="this.parentElement.style.display='none';" style=" margin-left: 15px;
  color: white;
  font-weight: bold;
  float: right;
  font-size: 22px;
  line-height: 20px;
  cursor: pointer;
  transition: 0.3s;">&times;</span> 
  <strong>Opps!</strong> All field are required please fill them all
</div>
    <form class="w3-container" action="/submit" method="post">
      <p><label>Province</label>
      <select id="PROVINCE" name="PROVINCE" class="w3-select" onchange="rtnExample.handleChange (event)">
        <option value="">please select</option>
        {{#each provinces}}
        <option value="{{.}}">{{.}}</option>
        {{/each}}
      </select>
      <p><label>District</label>
      <select id="DISTRICT" name="DISTRICT" class="w3-select" onchange="rtnExample.handleChange (event)" disabled></select>
      <p><label>Sector</label>
      <select id="SECTOR" name="SECTOR" class="w3-select" onchange="rtnExample.handleChange (event)" disabled></select>
      <p><label>Cell</label>
      <select id="CELL" name="CELL" class="w3-select" onchange="rtnExample.handleChange (event)" disabled></select>
      <p><label>Village</label>
      <select id="VILLAGE" name="VILLAGE" class="w3-select" disabled></select>
      <p><button type="submit" class="w3-green w3-button" id="btn">submit</button>
    </form>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $('#loginAlert').hide();
    const urlParams = new URLSearchParams(window.location.search);
    const myParam = urlParams.get('error');
    if(myParam == "incomplete data") {
        $('#loginAlert').show();
    }
</script>